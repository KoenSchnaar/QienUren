@page
@{
    ViewData["Title"] = "Wijzig foto";
    ViewData["ActivePage"] = ManageNavPages.ChangeProfilePicture;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="ChangePicture" asp-controller="Employee" enctype="multipart/form-data">
            <input type="file" name="picture" /> <br />
            <button type="submit" class="btn-primary btn space">Opslaan</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}