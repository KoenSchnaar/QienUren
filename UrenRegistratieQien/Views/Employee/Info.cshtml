
@model UrenRegistratieQien.Models.EmployeeModel

@{
    ViewData["Title"] = "Info";
    ViewBag.User = Model;
}

<div class="Container-1">
    <div class="box-1">
        @Html.PartialAsync("_SideBoxEmployee", Model)
    </div>
    <div class="box-2" align="center">
        <table class="fl-table table-wrapper">
            <thead>
                <tr>
                    <th>Werknemer</th>
                    <th>Werkgever</th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td>@Model.FirstName @Model.LastName</td>
                    <td>@ViewBag.Client.Contact1Name</td>
                </tr>
                <tr>
                    <td>@Model.Address</td>
                    <td>@ViewBag.Client.CompanyName</td>
                </tr>
                <tr>
                    <td>@Model.ZIPCode @Model.Residence</td>
                    <td></td>
                </tr>
                <tr>
                    <td>@Model.Phone</td>
                    <td>@ViewBag.Client.Contact1Phone</td>
                </tr>
                <tr>
                    <td>@Model.Email</td>
                    <td>@ViewBag.Client.Contact1Email</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

