
@using UrenRegistratieQien.Models
@using System.Collections.Generic
@model List<DeclarationFormModel>

@{
    ViewData["Title"] = "Administrator Page";
}


<div align="center">
    <h1>Welkom, administrator</h1>
    <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">Maak een gebruiker aan</a>
</div>


<br />
<br />
    <div>
        <div align="center">
            <h1>Totaaloverzicht</h1>
        </div>

        <div class="table-wrapper">
        <table class="fl-table" align="center">
            <thead>
            <tr>
                <th>
                    Medewerker Naam
                    <select runat="server" id="employeeNameSelect">
                        <option onclick="location.href='@Url.Action("Admin", "Admin")'">--</option>
                        @foreach (DeclarationFormModel declarationFormModel in ViewBag.AllForms)
                        {
                            
                            
                            <option onclick="location.href='@Url.Action("AdminWithEmployeeId", "Admin", new { employeeId = declarationFormModel.EmployeeId})'" value=@declarationFormModel.EmployeeName> @declarationFormModel.EmployeeName</option>
                            
                        }

                    </select>

                </th>
                <th>
                    Maand
                    <select runat="server" id="MonthSelect">
                        <option onclick="location.href='@Url.Action("Admin", "Admin")'">--</option>
                        @foreach (string month in ViewBag.Months)
                        {

                            <option onclick="location.href='@Url.Action("AdminWithMonthYear", "Admin", new { month = month})'"> @month</option>
                        }
                    </select>
                
                </th>
                <th>Goedgekeurd</th>
                <th>Ingediend</th>
                <th>Commentaar</th>
                <th>Inzien</th>
            </tr>
            </thead>

            <tbody>
            @foreach (DeclarationFormModel declarationFormModel in Model)
            {
                <tr>
                    <td>@declarationFormModel.EmployeeName</td>
                    <td>@declarationFormModel.Month</td>
                    <td>@declarationFormModel.Approved</td>
                    <td>@declarationFormModel.Submitted</td>
                    <td>@declarationFormModel.Comment</td>
                    <td>
                      <a class="nav-link text-dark"
                               asp-area=""
                               asp-controller="Admin"
                               asp-action="ViewDeclarationForm"
                               asp-route-formId="@declarationFormModel.FormId">
                                Inzien
                      </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
        </div>
    </div>

