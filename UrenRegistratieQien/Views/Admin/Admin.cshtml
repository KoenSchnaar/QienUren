@*nog aanpassen naar juiste model*@
@using UrenRegistratieQien.Models
@using System.Collections.Generic
@model List<DeclarationFormModel>

@{
    ViewData["Title"] = "Administrator Page";
}


<div align="center">
    <h1>Welkom, administrator</h1>
    <a class="text-dark" asp-area="Identity" asp-page="/Account/Register">Maak een gebruiker aan</a>
</div>

<br />
<br />
<div align="center">
    <h1>Uren Totaal Overzicht</h1>
</div>
<div class="table-wrapper">
    <table class="fl-table" align="center">
        <thead>
            <tr>
                <th>Maand</th>
                <th>Uren gewerkt</th>
                <th>Overwerk</th>
                <th>Ziekte</th>
                <th>Vakantie</th>
                <th>Feestdagen</th>
                <th>Training</th>
                <th>Overig</th>
            </tr>
        <thead>

            <tr>
                <td>
                    <select>
                        @foreach (DeclarationFormModel declarationFormModel in Model)
                        {
                            <option onselect="?" value=@declarationFormModel.Month>@declarationFormModel.Month</option>

                        }

                    </select>

                </td>
                <td>@ViewBag.TotalHoursWorked</td>
                <td>@ViewBag.TotalHoursOvertime</td>
                <td>@ViewBag.TotalHoursSickness</td>
                <td>@ViewBag.TotalHoursVacation</td>
                <td>@ViewBag.TotalHoursHoliday</td>
                <td>@ViewBag.TotalHoursTraining</td>
                <td>@ViewBag.TotalHoursOther</td>

            </tr>


    </table>
    </div>


    <br />
    <br />
    <div>
        <div align="center">
            <h1>Totaaloverzicht</h1>
        </div>

        <div class="table-wrapper">
            <table class="fl-table" align="center">
                <thead>
                    <tr>
                        <th>
                            Medewerker Naam
                            @*test*@
                            <select runat="server" id="selected">
                                <option onclick="location.href='@Url.Action("Admin", "Admin")'">--</option>
                                @foreach (DeclarationFormModel declarationFormModel in ViewBag.AllForms)
                                {
                                    <option onclick="location.href='@Url.Action("AdminWithParam", "Admin", new { employeeId = declarationFormModel.EmployeeId})'" value=@declarationFormModel.EmployeeName> @declarationFormModel.EmployeeName</option>

                                }

                            </select>

                        </th>
                        <th>Maand</th>
                        <th>Goedgekeurd</th>
                        <th>Ingediend</th>
                        <th>Commentaar</th>
                        <th>Actie</th>
                        <th>Inzien</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (DeclarationFormModel declarationFormModel in Model)
                    {
                        <tr>
                            <td>@declarationFormModel.EmployeeName</td>
                            <td>@declarationFormModel.Month</td>
                            <td>@declarationFormModel.Approved</td>
                            <td>@declarationFormModel.Submitted</td>
                            <td>@declarationFormModel.Comment</td>
                            <td>@declarationFormModel.FormId</td>
                            <td>
                                <a class="nav-link text-dark"
                                   asp-area=""
                                   asp-controller="Admin"
                                   asp-action="ViewDeclarationForm"
                                   asp-route-formId="@declarationFormModel.FormId">
                                    Inzien
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

