@model DeclarationFormModel
@{
    ViewData["Title"] = "ViewDeclarationForm";
}

<div class="Container-1">
    <div class="box-1">
        @Html.Partial("_SideBoxAdmin")
    </div>

    <div class="box-2">
        <form>
            @*<button type="submit" class="btn-primary btn"
                asp-controller="Admin"
                asp-action="DownloadExcel"
                asp-route-declarationForm=@Model>
            Download als Excel
        </button>*@
            <a asp-area=""
               asp-controller="Admin"
               asp-action="DownloadExcel"
               asp-route-formId="@Model.FormId">
                downloadexcel
            </a>
        </form>

        <table align="center" class="fl-table table-wrapper">
            <thead>
                <tr>
                    <th>Datum</th>
                    <th>Gewerkt</th>
                    <th>Overwerk</th>
                    <th>Ziekte</th>
                    <th>Vakantie</th>
                    <th>Feestdagen</th>
                    <th>Training</th>
                    <th>Overig</th>
                    <th>Overig Uitleg</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var hourRow in Model.HourRows)
                {
                    <tr>
                        <td>@hourRow.Date</td>
                        <td>@hourRow.Worked</td>
                        <td>@hourRow.Overtime</td>
                        <td>@hourRow.Sickness</td>
                        <td>@hourRow.Vacation</td>
                        <td>@hourRow.Holiday</td>
                        <td>@hourRow.Training</td>
                        <td>@hourRow.Other</td>
                        <td>@hourRow.OtherExplanation</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
