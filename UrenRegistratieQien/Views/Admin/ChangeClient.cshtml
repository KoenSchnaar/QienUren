@model ClientModel
<br>
<br>
<br>

<div class="table-wrapper">
        <form asp-controller="Admin" asp-action="EditClient">
            @Html.HiddenFor(m => m.ClientId);
            <table class="fl-table" align="center">
                <thead>
                    <tr>
                        <th>In database</th>
                        <th>Nieuw</th>
                    </tr>
                <thead>
                <tbody>
                    <tr>
                        <td>Bedrijfsnaam</td>
                        <td>@Html.TextBoxFor(m => m.CompanyName)</td>
                    </tr>
                    <tr>
                        <td>Algemeen telefoonnummer</td>
                        <td>@Html.TextBoxFor(m => m.CompanyPhone)</td>
                    </tr>
                    <tr>
                        <td>Naam 1e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact1Name)</td>
                    </tr>
                    <tr>
                        <td>Telefoonnummer 1e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact1Phone)</td>
                    </tr>
                    <tr>
                        <td>E-mailadres 1e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact1Email)</td>
                    </tr>
                    <tr>
                        <td>Naam 2e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact2Name)</td>
                    </tr>
                    <tr>
                        <td>Telefoonnummer 2e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact2Phone)</td>
                    </tr>
                    <tr>
                        <td>E-mailadres 2e contactpersoon</td>
                        <td>@Html.TextBoxFor(m => m.Contact2Email)</td>
                    </tr>
                </tbody>
            </table>
        <button type="submit">Opslaan</button>
        </form>
    </div>

